<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/tv_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_score"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textColor="#FF000000"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        app:layout_constraintBottom_toTopOf="@+id/tv_level_percent"
        android:textColor="#FF000000"
        android:textSize="50sp"
        ></TextView>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="8dp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_trend"
        app:layout_constraintTop_toTopOf="@+id/tv_trend"
        app:layout_constraintRight_toLeftOf="@+id/tv_trend"
        ></ImageView>

    <TextView
        android:id="@+id/tv_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF2AD181"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_score"
        app:layout_constraintBottom_toBottomOf="@+id/tv_score"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_score"
        />

    <TextView
        android:id="@+id/tv_level_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_score"
        app:layout_constraintBottom_toTopOf="@+id/tv_level"
        android:textColor="#FF000000"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_level_percent"
        android:textColor="#FF38D7D5"
        android:textSize="20sp"
        android:layout_marginTop="6.67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>